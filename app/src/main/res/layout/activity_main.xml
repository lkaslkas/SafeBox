<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deepskyblue"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        >
        <Button
            android:layout_width="40dip"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:background="@mipmap/back_normal"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="系统设置"
            android:textStyle="bold"
            android:textSize="30dip"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_net"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="100dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/net"
            />
        <ImageView
            android:id="@+id/iv_network"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginRight="60dip"
            android:layout_alignParentRight="true"
            android:src="@mipmap/network"
            />
        <ImageView
            android:id="@+id/iv_cloud"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_marginRight="20dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/cloud"
            />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="160dip"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="基础设置"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="功能设置"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="用户管理"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="识别设置"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />

            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="个性化设置"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="服务器设置"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />
            <TextView
                android:layout_width="120dip"
                android:layout_height="40dip"
                android:background="@drawable/item_blue"
                android:textColor="@color/white"
                android:text="初始化"
                android:gravity="center"
                android:layout_marginBottom="10dip"
                android:textSize="16dip"
                />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/floContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>