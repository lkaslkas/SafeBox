<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/deepskyblue"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="10dip"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="智能机柜管理系统"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="2022年7月26日 11:11:11 星期二"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_gravity="right"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_marginRight="20dip"
            android:src="@mipmap/warning"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dip"
            android:gravity="center_vertical"
            android:textSize="18dip"
            android:textColor="@color/red"
            android:text="有新的告警"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="温度"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="26°C"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="湿度"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="40%HR"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/red_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="烟雾"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="告警"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/yellow_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="排风导热"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="未启动"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="电压"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="220V"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="电流"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="3A"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="电量"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="正常"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dip"
            android:orientation="vertical"
            android:layout_marginLeft="40dip"
            android:background="@drawable/normal_state"
            android:layout_height="100dip"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20dip"
                android:layout_marginTop="10dip"
                android:textColor="@color/white"
                android:text="在位监测"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:textSize="22dip"
                android:layout_marginBottom="10dip"
                android:textColor="@color/white"
                android:text="正常"
                />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:gravity="center"
        android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:gravity="center"
                android:background="@drawable/home_btn_background"
                >
                    <ImageView
                        android:layout_width="30dip"
                        android:src="@mipmap/home_box"
                        android:layout_height="30dip"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="60dip"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="开柜"
                    android:gravity="center"
                    android:textSize="14dip"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:gravity="center"
                android:background="@drawable/home_btn_background"
                >
                <ImageView
                    android:layout_width="30dip"
                    android:src="@mipmap/home_warn"
                    android:layout_height="30dip"/>
            </RelativeLayout>
            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="告警"
                android:gravity="center"
                android:textSize="14dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:gravity="center"
                android:background="@drawable/home_btn_background"
                >
                <ImageView
                    android:layout_width="30dip"
                    android:src="@mipmap/home_search"
                    android:layout_height="30dip"/>
            </RelativeLayout>
            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="查询"
                android:gravity="center"
                android:textSize="14dip"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:gravity="center"
                android:background="@drawable/home_btn_background"
                >
                <ImageView
                    android:layout_width="30dip"
                    android:src="@mipmap/home_setting"
                    android:layout_height="30dip"/>
            </RelativeLayout>
            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="设置"
                android:gravity="center"
                android:textSize="14dip"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="60dip"
                android:layout_height="60dip"
                android:gravity="center"
                android:background="@drawable/home_btn_background"
                >
                <ImageView
                    android:layout_width="30dip"
                    android:src="@mipmap/home_call"
                    android:layout_height="30dip"/>
            </RelativeLayout>
            <TextView
                android:layout_width="60dip"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="呼叫"
                android:gravity="center"
                android:textSize="14dip"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>